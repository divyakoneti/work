<div class = "container" >
	<h3>Add_New_book</h3>
	<%= form_for @book ,remote: true do |f| %>
		

		<div class = "form-group " >
			<%= f.label :Catagory, class:"control-label " %>
			<%= select("book", "catagory_id", @catagories.collect {|c| [ c.name, c.id ] },:include_blank => "Please select" , class: "form-control") %> <!-- here display drop down list for catagories -->
		</div>
		<div class = "form-group " >
			<%= f.label :Name, class:"control-label " %>:
			<%= f.text_field :book_title , class: "form-control" %>
		</div>
	   <div class = "form-group" > 
            <%= label_tag("email ") %>
            <%= email_field_tag(:email) %>
        </div>
		<div>
		    <%= f.submit "save" ,class:"btn btn-primary",remote: true %>
		</div>
	<% end %>	
</div>
<% if @book.errors.any? %>
  <div id="error_explanation">
     <%= pluralize(@book.errors.count, "error") %> Prohibited
     <ul class= "well well-sm" >
     <% @book.errors.full_messages.each do |m| %>
      </ul>
      <li><%= m %></li>
     <% end %>
     </ul>
  </div>
<% end %>

      
		        